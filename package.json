    "minimatch": "^3.0.4",
    "moment": "^2.18.1",
    "mongodb": "^2.2.31",
    "monk": "6.0.5",
    "monotonic-timestamp": "0.0.9",
    "netmask": "1.0.6",
    "newrelic": "2.4.1",
    "node-anonize2-relic": "0.1.6",
    "node-binance-api": "0.2.5",
    "node-cache": "4.1.1",
    "node-slack": "0.0.7",
    "oxr": "1.0.2",
    "proxy-agent": "^2.1.0",
    "raven": "^2.1.2",
    "redis": "2.8.0",
    "rsmq": "^0.8.2",
    "rsmq-worker": "^0.5.2",
    "sdebug": "^0.9.5",
    "tldjs": "2.2.0",
    "tweetnacl": "^1.0.0",
    "underscore": "1.8.3",
    "uuid": "3.1.0",
    "validate-ip-node": "1.0.6",
    "vision": "^4.1.1",
    "wreck": "13.0.1"
  },
  "engines": {
    "node": "8.9.2",
    "npm": "5.5.1"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-eslint": "^8.0.0",
    "bitgo": "4.12.0",
    "npm-check-updates": "^2.12.1",
    "nsp": "^3.1.0",
    "standard": "10.0.3",
    "supertest": "^3.0.0",
    "throng": "4.0.0"
  },
  "standard": {
    "ignore": [
      "config.js",
      "bat-utils/config/config.*"
    ],
    "parser": "babel-eslint"
  }
}
